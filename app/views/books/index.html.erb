<div>
  <h2>Books</h2>
     <table class="table">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
         </tr>
       </thead>
       <% @books.each do |book| %>
           <tbody>
             <tr>
               <th><%= image_tag book.user.get_profile_image(80,80) %></th>
               <th><%= link_to book.title, book_path(book.id) %></th>
               <th><%= book.body %></th>
             </tr>
           </tbody>
        <% end %>
     </table>
</div>
