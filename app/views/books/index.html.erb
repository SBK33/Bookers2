  <% if @book.errors.any? %>
    <div id ="error_messages">
      <h2> <%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div>
  <%= render 'list', user: @user, book: @book %>
</div>

<div>
  <h2>Books</h2>
     <table class="table">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
         </tr>
       </thead>
       <% @books.each do |book| %>
           <tbody>
             <tr>
               <th><%= image_tag book.user.get_profile_image(80,80) %></th>
               <th><%= link_to book.title, book_path(book.id) %></th>
               <th><%= book.body %></th>
             </tr>
           </tbody>
        <% end %>
     </table>
</div>
