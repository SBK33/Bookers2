<!--カレントユーザーとページのユーザーIDが異なる場合のみ変更-->
<div>
  <h2>User info</h2>
   <%= image_tag user.get_profile_image(100,100) %>
     <table class="table">
       <tbody>
         <tr>
           <th>name</th>
           <th><%= user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
       </tbody>
     </table>
</div>
<div class="row">
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>
<!--アイコンにリンク張るの困ったらこれ https://qiita.com/kenta-nishimoto-1111/items/3977929de16bdbe160fd-->

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
