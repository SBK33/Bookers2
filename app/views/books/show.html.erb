<div>
  <%= render 'list', user: @book.user, book: @book_new %>
</div>

<div>
  <h2>Book detail</h2>
   <table class="table">
     <% if @book.user == current_user %>
       <tbody>
         <tr>
           <th>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
           </th>
           <th><%= link_to @book.title, book_path(@book.id) %></th>
           <th><%= @book.body %></th>
           <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
           <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%></th>
         </tr>
       </tbody>
     <% else %>
       <tbody>
         <tr>
           <th>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
           </th>
           <th><%= link_to @book.title, book_path(@book.id) %></th>
           <th><%= @book.body %></th>
         </tr>
       </tbody>
     <% end %>
   </table>
</div>