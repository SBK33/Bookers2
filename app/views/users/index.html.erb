<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <div>
            <%= render 'books/list', user: @user, book: @book_new %>
          </div>
        </div>

        <div class="col-md-8 offset-md-1">
          <div>
            <h2>Users</h2>
               <table class="table">
                 <thead>
                   <tr>
                     <th>image</th>
                     <th>name</th>
                   </tr>
                 </thead>
                 <% @users.each do |user| %>
                     <tbody>
                       <tr>
                         <th><%= image_tag user.get_profile_image(80,80) %></th>
                         <th><%= user.name %></th>
                         <th><%= link_to "Show", user_path(user.id)%></th>
                       </tr>
                     </tbody>
                  <% end %>
               </table>
          </div>
        </div>
    </div>
</div>




