


<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <% if @user.errors.any? %>
        <div id ="error_messages">
          <h2> <%= @user.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class ="form-group">
          <label for="user_name">Name</label></br>
          <%= f.text_field :name %>
        </div>
        <div class ="form-group">
          <label for="user_image">Image</label></br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class ="form-group">
          <label for="user_introduction">Introduction</label></br>
          <%= f.text_field :introduction %>
        </div>
        <div class ="form-group">
          <%= f.submit "Update User" %>
        </div>

      <% end %>
<!--bookのeditの記載方法とどちらが一般的か--->
    </div>
  </div>
</div>
