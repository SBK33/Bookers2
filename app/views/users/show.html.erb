<div>
  <h2>User info</h2>
   <%= image_tag @user.get_profile_image(100,100) %>
   <%= @user.each do |user| %>
     <table>
       <tbody>
         <tr>
           <th>name</th>
           <th><%= @user.name %></th>
         </tr>

         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
       </tbody>
     </table>
   <% end %>
</div>
