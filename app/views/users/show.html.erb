<div>
  <h2>User info</h2>
   <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table">
       <tbody>
         <tr>
           <th>name</th>
           <th><%= @user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
         </tr>
       </tbody>
     </table>
</div>
<div>
  <%= link_to(edit_user_path(@user.id)) do %>
    <p>アイコン</p>
  <% end %>
</div>
